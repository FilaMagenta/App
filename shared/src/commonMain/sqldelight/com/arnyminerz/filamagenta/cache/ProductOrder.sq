import kotlinx.datetime.LocalDateTime;

CREATE TABLE ProductOrder (
    id INTEGER PRIMARY KEY NOT NULL,
    eventId INTEGER NOT NULL,
    orderNumber TEXT NOT NULL,
    date INTEGER AS LocalDateTime NOT NULL,
    customerId INTEGER NOT NULL,
    customerName TEXT NOT NULL,
    _cache_meta_data TEXT NOT NULL,
    FOREIGN KEY(eventId) REFERENCES Event(id)
);

getAll:
SELECT * FROM ProductOrder;

getById:
SELECT * FROM ProductOrder WHERE id = ?;

getByEventId:
SELECT * FROM ProductOrder WHERE eventId = ?;

insert:
INSERT INTO ProductOrder(id, eventId, orderNumber, date, customerId, customerName, _cache_meta_data) VALUES (?, ?, ?, ?, ?, ?, ?);

update:
UPDATE ProductOrder SET eventId=?, orderNumber=?, date=?, customerId=?, customerName=?, _cache_meta_data=? WHERE id=?;

retainById:
DELETE FROM ProductOrder WHERE id NOT IN ?;
