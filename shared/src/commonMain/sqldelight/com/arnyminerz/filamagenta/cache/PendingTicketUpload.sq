-- Stores scanned tickets, for uploading them to the server afterwards
CREATE TABLE PendingTicketUpload(
    id INTEGER PRIMARY KEY NOT NULL,
    orderId INTEGER NOT NULL,
    customerId INTEGER NOT NULL
);

insert:
INSERT INTO PendingTicketUpload(id, orderId, customerId) VALUES (?, ?, ?);

update:
UPDATE PendingTicketUpload SET orderId=?, customerId=? WHERE id=?;

getAll:
SELECT * FROM PendingTicketUpload;
