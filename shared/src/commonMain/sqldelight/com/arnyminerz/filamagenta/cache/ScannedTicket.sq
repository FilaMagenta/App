-- Stores scanned tickets
CREATE TABLE ScannedTicket(
    id INTEGER PRIMARY KEY NOT NULL,
    orderId INTEGER NOT NULL,
    customerId INTEGER NOT NULL,
    eventId INTEGER NOT NULL
);

getByOrderId:
SELECT * FROM ScannedTicket WHERE orderId=?;

getByEventId:
SELECT * FROM ScannedTicket WHERE eventId=?;

find:
SELECT * FROM ScannedTicket WHERE orderId=? AND customerId=? AND eventId=?;

insert:
INSERT INTO ScannedTicket(id, orderId, customerId, eventId) VALUES (?, ?, ?, ?);

update:
UPDATE ScannedTicket SET orderId=?, customerId=?, eventId=? WHERE id=?;

getAll:
SELECT * FROM ScannedTicket;

delete:
DELETE FROM ScannedTicket WHERE id=:id;
